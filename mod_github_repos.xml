<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8.0" method="upgrade">
	<name>MOD_GITHUB_REPOS</name>
	<author>Yireo</author>
	<creationDate>April 2018</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@yireo.com</authorEmail>
	<authorUrl>https://www.yireo.com/</authorUrl>
	<version>2.0.0</version>
	<description>MOD_GITHUB_REPOS_DESC</description>

	<files>
		<filename module="mod_github_repos">mod_github_repos.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages>
        <language tag="en-GB">en-GB.mod_github_repos.ini</language>
        <language tag="en-GB">en-GB.mod_github_repos.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
		        <field name="user" type="text" default="" label="MOD_GITHUB_REPOS_FIELD_GITHUB_USER" description="MOD_GITHUB_REPOS_FIELD_GITHUB_USER" />
		        <field name="client_id" type="text" default="" label="MOD_GITHUB_REPOS_FIELD_GITHUB_CLIENT_ID" description="MOD_GITHUB_REPOS_FIELD_GITHUB_CLIENT_ID_DESCRIPTION" />
		        <field name="client_secret" type="text" default="" label="MOD_GITHUB_REPOS_FIELD_GITHUB_CLIENT_SECRET" description="MOD_GITHUB_REPOS_FIELD_GITHUB_CLIENT_SECRET_DESCRIPTION" />
        	</fieldset>
			<fieldset name="styling" label="MOD_GITHUB_REPOS_FIELDSET_STYLING">
		        <field name="count" type="text" default="10" label="MOD_GITHUB_REPOS_FIELD_COUNT" description="MOD_GITHUB_REPOS_FIELD_COUNT_DESCRIPTION" />
        		<field name="skip_forks" type="list" default="1" label="MOD_GITHUB_REPOS_FIELD_SKIP_FORKS" description="MOD_GITHUB_REPOS_FIELD_SKIP_FORKS_DESCRIPTION"> 
		        	<option value="1">JYES</option>
        			<option value="0">JNO</option>
        		</field>
        	</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
		        <field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
        		<field name="owncache" type="list" default="1" label="MOD_GITHUB_REPOS_FIELD_OWNCACHE" description="MOD_GITHUB_REPOS_FIELD_OWNCACHE_DESCRIPTION"> 
		        	<option value="1">JGLOBAL_USE_GLOBAL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        		</field>
        		<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC"> 
		        	<option value="1">JGLOBAL_USE_GLOBAL</option>
        			<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        		</field>
        		<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
        	</fieldset>
        </fields>
    </config>
</extension>
